<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
		font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<h2>Lesson</h2>
		<table>
			<tr>
				<td colspan="2">
					<g:Label styleName="{style.important}" ui:field="labelQuestion"
						text=" " />
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<g:TextBox styleName="{style.important}" ui:field="textBoxReponse"
						text=" " width="500" />
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<g:Label styleName="{style.important}" ui:field="labelCorrection"
						text=" " width="500" />
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<g:Label styleName="{style.important}" ui:field="labelStat"
						text=" " width="500" />
				</td>
			</tr>
			<tr>
				<td colspan="1">
					<g:Button styleName="{style.important}" ui:field="buttonOK"
						text="OK" />
				</td>
				<td colspan="1">
					<g:Button styleName="{style.important}" ui:field="buttonNext"
						text="Next" />
				</td>
			</tr>
			<tr>
			    <td>
			         <g:SimplePanel width="200px" height="200px" ui:field="panelStat"/> 
		
			    </td>
			</tr>
			
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 