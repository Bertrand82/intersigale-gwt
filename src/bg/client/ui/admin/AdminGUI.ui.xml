<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
		<h2>Edit</h2>
		<table>
		<tr> <td><g:Button styleName="{style.important}" ui:field="buttonChooseLexiqueInLocal" ui:text="Choose Lexique in local store"/></td></tr>
		<tr> <td><g:Button styleName="{style.important}" ui:field="buttonChooseLexiqueInRemote" ui:text="Choose Lexique in Remote store"/></td></tr>
		<tr> <td><g:Button styleName="{style.important}" ui:field="buttonSaveLexiqueInLocal" ui:text="Save Lexique in local store..."/></td></tr>
		<tr> <td><g:Button styleName="{style.important}" ui:field="buttonSaveLexiqueInRemote" ui:text="Save Lexique in remote public store"/></td></tr>
		<tr> <td><g:Button styleName="{style.important}" ui:field="buttonCreateLexique" ui:text="Create new Lexique"/></td></tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 