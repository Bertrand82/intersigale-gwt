<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
		font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel visible="false">
		<g:DialogBox autoHide="true" modal="true">
			<g:caption>
				<b>Caption text</b>
			</g:caption>
			<g:HTMLPanel>
				Body text
				<g:Button ui:field='buttonCancel' >Cancel</g:Button>
				<g:Button ui:field='buttonOk'>Okay</g:Button>
			</g:HTMLPanel>
		</g:DialogBox>
	</g:HTMLPanel>
</ui:UiBinder> 